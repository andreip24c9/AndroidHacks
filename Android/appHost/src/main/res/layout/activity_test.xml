<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="/storage/emulated/0/vader.apk" />

    <Button
        android:id="@+id/btn_selectapk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_margin="30dp"
        android:text="select Apk"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_selectapk"
        android:layout_margin="30dp"
        android:text="root install"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_openaccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_root"
        android:layout_margin="30dp"
        android:text="open access"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_openaccess"
        android:layout_margin="30dp"
        android:text="accessibility"
        android:textSize="16sp" />

</RelativeLayout>